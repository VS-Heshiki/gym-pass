{
    "compilerOptions": {
        "target": "ES2021",
        "module": "commonjs",
        "baseUrl": "src",
        "moduleResolution": "node",
        "sourceMap": true,
        "paths": {
            "@/*": [
                "*"
            ]
        },
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    }
}
